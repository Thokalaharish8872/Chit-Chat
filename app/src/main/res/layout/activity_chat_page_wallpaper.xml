<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".chat_page_wallpaper">

    <ImageButton
        android:id="@+id/add_from_device"
        android:layout_width="120dp"
        android:layout_height="200dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:padding="20dp"


        android:scaleType="centerInside"
        android:src="@drawable/addbtn"
        app:layout_constraintEnd_toStartOf="@+id/love"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/love"
        android:layout_width="120dp"
        android:layout_height="205dp"
        android:scaleType="centerCrop"
        android:src="@drawable/love_wallpaper"
        app:layout_constraintEnd_toStartOf="@+id/butterfly"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="12dp"/>

    <ImageButton
        android:id="@+id/butterfly"
        android:layout_width="120dp"
        android:layout_height="195dp"
        android:layout_marginTop="4dp"


        android:padding="-30dp"
        android:scaleType="centerCrop"
        android:src="@drawable/butterfly_wallpaper"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.945"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>